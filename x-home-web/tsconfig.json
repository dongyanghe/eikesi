{
    "compilerOptions": {
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "suppressImplicitAnyIndexErrors": true,
        "lib": ["es2015", "es2017","es2018", "dom"],
        "mapRoot": "./",
        "module": "es6",
        "moduleResolution": "node",
        "outDir": "dist/",
        "sourceMap": true,
        "target": "es5",
        "exclude": [
            "node_modules",
            "src/**/*.spec.ts"
        ],
        "typeRoots": [
            "../node_modules/@types"
        ]
    }

}
